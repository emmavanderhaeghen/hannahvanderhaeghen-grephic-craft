{# Layouts and macros #}
{% extends "_layout/site" %}

{% block content %}
    <section class="container">
        <article class="flex flex-col-reverse lg:flex-row items-center mt-10 lg:mt-50 mb-100 lg:mb-200">
            <div class="w-12/12 lg:w-6/12">
                <img src="../assets/www/images/about-page.jpg" alt="hero">
            </div>
            <div class="w-12/12 lg:w-4/12 mb-60 lg:mb-0 mx-auto text-10 fade-in">
                {{entry.redactor|nl2br}}
                {# {{ include ("_layout/partials/button", {button: entry.linkOne}) }} #}
            </div>
        </article>

        <article class="flex flex-col lg:flex-row items-center mt-50 mb-100 lg:mb-200">
            <p class="w-12/12 lg:w-4/12 mx-auto text-10 mb-60 lg:mb-0 fade-in">
                {{entry.descriptionTwo|nl2br}}
            </p>
            <div class="w-6/12 lg:w-3/12 mx-auto  fade-in">
                <img src="../assets/www/images/Portret.jpg" alt="portret">
            </div>
        </article>
    </section>

    {# contact section - contact page #}
    <article class="relative lg:mt-200">
        <div class="z-20 w-12/12 lg:w-6/12 absolute right-0 bg-black bg-opacity-75 px-20 lg:pr-[24rem] pt-50 lg:pl-80 pb-70 fade-in">
            <h2 class="text-25 md:text-50 lg:text-80 font-serif uppercase lg:absolute lg:left-80 lg:-top-[2.25rem] text-pink-500 scroll-title-right">{{ commonlyUsed.titleOne }}</h2>
            <p class="py-30 lg:py-80 text-9 text-white">{{ commonlyUsed.descriptionOne }}</p>
            <a class="relative pointer bg-pink text-black py-10 px-20 block w-max hover:bg-black hover:text-white transition duration-300" href="{{ commonlyUsed.linkOne.getUrl() }}" target="{{ commonlyUsed.linkOne.getTarget() }}">{{ commonlyUsed.linkOne.getText() }}</a>
        </div>
        <div class="relative bottom-0 left-0">
        {% for image in commonlyUsed.imageOne %}
            <img class="h-500 w-full object-cover relative top-0 left-0" src="{{image.url()}}" alt="hero">
        {% endfor %}
        </div>
    </article>
{% endblock %}